<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manukanu.expenditure.signup"
    android:orientation="vertical"
    android:background="#FFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Sign In to create account"
            android:textColor="#000"
            android:textStyle="bold|italic"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="362dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:paddingTop="18dp"
            android:src="@drawable/signin" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Username"
            android:id="@+id/u"
            android:textSize="@dimen/txtsize"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColorHint="@color/txt"
            android:background="@drawable/text_border"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:id="@+id/p"
            android:textSize="@dimen/txtsize"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColorHint="@color/txt"
            android:background="@drawable/text_border"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter recovery mail"
            android:id="@+id/rec"
            android:textSize="@dimen/txtsize"
            android:textColor="#000"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColorHint="@color/txt"
            android:background="@drawable/text_border"/>
    <Button
        android:layout_width="@dimen/btnw"
        android:layout_height="@dimen/btnh"
        android:text="REGISTER"
        android:id="@+id/reg"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/txtsize"
        android:textColor="#f5f2f2"
        android:layout_gravity="center"
        android:onClick="reg"
        android:background="@drawable/mbutton"/>
    </LinearLayout>

</LinearLayout>
