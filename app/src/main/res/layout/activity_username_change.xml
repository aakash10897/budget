<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manukanu.expenditure.username_change"
    android:orientation="vertical">
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:textSize="20dp"
        android:text="Current username"
        android:textColor="@color/colorAccent"
        android:textStyle="bold|italic"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/current_text"
        android:textSize="@dimen/txtsize"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/text_border"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:text="New username"
        android:textColor="@color/colorAccent"
        android:textStyle="bold|italic"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_text"
        android:textSize="@dimen/txtsize"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/text_border"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:text="Confirm username"
        android:textColor="@color/colorAccent"
        android:textStyle="bold|italic"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_text"
        android:textSize="@dimen/txtsize"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/text_border"/>

    <Button
        android:layout_width="@dimen/btnw"
        android:layout_height="@dimen/btnh"
        android:text="update"
        android:id="@+id/chng_username"
        android:layout_marginTop="40dp"
        android:textSize="@dimen/txtsize"
        android:textColor="#FFF"
        android:layout_gravity="center"
        android:onClick="chng_username"
        android:background="@drawable/mbutton"
        android:elevation="150dp" />



</LinearLayout>
