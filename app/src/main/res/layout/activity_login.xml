<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manukanu.expenditure.login"
    android:orientation="vertical"
    android:background="#FFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="237dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:paddingTop="18dp"
            android:src="@drawable/login"
            android:layout_weight="1.36" />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="268dp"
    android:orientation="vertical">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Username"
        android:id="@+id/user"
        android:textSize="@dimen/txtsize"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColorHint="@color/txt"
        android:background="@drawable/text_border"
        android:onClick="username"/>

    <TextView
        android:id="@+id/username_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="1dp"
        android:onClick="username_type"
        android:layout_marginRight="40dp"
        android:textAlignment="center"
        android:textSize="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:id="@+id/password"
        android:textSize="@dimen/txtsize"
        android:textColor="#000"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColorHint="@color/txt"
        android:background="@drawable/text_border"/>
    <Button
        android:layout_width="@dimen/btnw"
        android:layout_height="@dimen/btnh"
        android:text="Login"
        android:id="@+id/login"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/txtsize"
        android:textColor="#FFF"
        android:layout_gravity="center"
        android:onClick="login"
        android:background="@drawable/mbutton"
        android:elevation="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="17dp"
        android:onClick="pass_field"/>

</LinearLayout>

</LinearLayout>